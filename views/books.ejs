<!DOCTYPE html>
<html lang="pt-BR">

    <head>
        <meta charset="UTF-8" />
        <title>Meus Livros - Acervo Digital</title>
        <link rel="stylesheet" href="/styles.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>

    <body>
        <div class="top-bar d-flex justify-content-between px-3">
            <div>Acervo Digital</div>
            <div><a href="/profile" class="text-white text-decoration-none"><i class="bi bi-person"></i> Perfil</a>
            </div>
        </div>

        <div class="container mt-4">
            <h2>Olá, <%= user.name %>!</h2>

            <form class="d-flex my-3" role="search">
                <input class="form-control me-2" type="search" placeholder="Pesquisar título..." aria-label="Search">
                <button class="btn btn-dark" type="submit">Buscar</button>
            </form>

            <div class="row">
                <% books.forEach(book=> { %>
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <img src="/img/book.png" class="card-img-top" alt="Capa do Livro">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= book.title %>
                                </h5>
                                <a href="/books/edit/<%= book.id %>" class="btn btn-sm btn-dark w-100">Editar</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </body>

</html>