<!DOCTYPE html>
<html lang="pt-BR">

    <head>
        <meta charset="UTF-8">
        <title>Meus Livros</title>
        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <div class="top-bar">
            Acervo Digital
        </div>
        <div class="container mt-4">
            <h2>Olá, leitor(a) %>!</h2>
            <div class="d-flex justify-content-between align-items-center my-3">
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Pesquisar título...">
                    <button class="btn" type="submit">Buscar</button>
                </form>
                <div>
                    <a href="/books/create" class="btn">+ Adicionar Livro</a>
                    <a href="/logout" class="btn btn-secondary">Sair</a>
                </div>
            </div>

            <div class="row">
                <% books.forEach(book=> { %>
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <a href="/books/<%= book.id %>">
                                <img src="<%= book.cover %>" class="card-img-top" alt="Capa de <%= book.title %>">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title text-center">
                                    <%= book.title %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>
    </body>

</html>