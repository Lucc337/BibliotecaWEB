<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>Meus Livros</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="body-default">
    <div class="top-bar">
        Acervo Digital
    </div>

    <div class="container mt-4">
        <h2>Olá, <%= userName %>!</h2>

        <div class="d-flex justify-content-between align-items-center my-3">
            <form class="d-flex my-3" role="search" action="/books/search" method="GET">
                <input class="form-control me-2" type="search" placeholder="Pesquisar título..." name="q"
                    aria-label="Search">
                <button class="btn" type="submit">Buscar</button>
            </form>

            <div>
                <a href="/logout" class="btn btn-secondary">Sair</a>
            </div>
        </div>

        <% if (books.length === 0) { %>
            <div class="message-box">
                <h2>Nenhum livro cadastrado ainda.</h2>
                <img src="/img/no-books.png" alt="Sem livros" width="200">
                <p>Que tal adicionar seu primeiro livro?</p>
                <a href="/books/create">Cadastrar Livro</a>
            </div>
        <% } else { %>
            <div class="row">
                <% books.forEach(book => { %>
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <a href="/books/<%= book.id %>">
                                <% if (book.cover) { %>
                                    <img src="<%= book.cover %>" class="card-img-top"
                                        alt="Capa de <%= book.title %>">
                                <% } else { %>
                                    <img src="/img/no-cover.png" class="card-img-top"
                                        alt="Capa não disponível">
                                <% } %>
                            </a>
                            <div class="card-body">
                                <p class="card-title">
                                    <%= book.title %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>

    </div>
</body>

</html>
