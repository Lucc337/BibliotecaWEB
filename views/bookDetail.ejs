<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title><%= book.title %> - Acervo Digital</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="body-default">
    <div class="top-bar">
        <%= book.title %>
    </div>

    <div class="container mt-4">
        <h2 class="mb-4"><%= book.title %></h2>

        <div class="row">
            <div class="col-md-4">
                <% if (book.cover) { %>
                    <img src="<%= book.cover %>" alt="Capa do Livro" class="img-fluid rounded book-cover">
                <% } else { %>
                    <img src="/img/no-books.png" alt="Sem capa" class="img-fluid rounded book-cover">
                <% } %>
            </div>

            <div class="col-md-8">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Autor:</strong> <%= book.author %></li>
                    <li class="list-group-item"><strong>Editora:</strong> <%= book.publisher %></li>
                    <li class="list-group-item"><strong>Ano:</strong> <%= book.year %></li>
                    <li class="list-group-item"><strong>ISBN:</strong> <%= book.isbn %></li>
                    <li class="list-group-item"><strong>Categoria:</strong> <%= book.category %></li>
                    <li class="list-group-item"><strong>Quantidade:</strong> <%= book.quantity %></li>
                    <li class="list-group-item"><strong>Descrição:</strong> <%= book.description %></li>
                </ul>

                <div class="mt-3">
                    <a href="/books/edit/<%= book.id %>" class="btn btn-dark">Editar</a>
                    <button id="showConfirm" class="btn btn-danger">Excluir</button>
                </div>

                <div id="confirmDelete" class="mt-3" style="display: none;">
                    <h5>Tem certeza que deseja excluir este livro?</h5>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Sim, excluir</button>
                    </form>
                    <button id="cancelDelete" class="btn btn-secondary">Cancelar</button>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <a href="/books" class="btn w-100">Voltar para Meus Livros</a>
            <a href="/books/create" class="btn btn-secondary w-100">+ Cadastrar Novo Livro</a>
        </div>
    </div>

    <script>
        const showConfirm = document.getElementById('showConfirm');
        const confirmBox = document.getElementById('confirmDelete');
        const cancel = document.getElementById('cancelDelete');

        if (showConfirm) {
            showConfirm.addEventListener('click', () => {
                confirmBox.style.display = 'block';
                showConfirm.style.display = 'none';
            });
        }

        if (cancel) {
            cancel.addEventListener('click', () => {
                confirmBox.style.display = 'none';
                showConfirm.style.display = 'inline-block';
            });
        }
    </script>
</body>

</html>
